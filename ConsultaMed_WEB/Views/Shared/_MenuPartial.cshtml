@using System.IdentityModel
<div class="navbar navbar-inverse">
    <div class="navbar-inner">
        @{
            try
            {
                if (Roles.GetRolesForUser(User.Identity.Name).Any())
                {
                    var perfil = Roles.GetRolesForUser(User.Identity.Name).First();

                    switch (perfil)
                    {
                        case "Administrador":
            @Html.Partial("_MenuPartialAdmin")
                            break;
                        case "Paciente":
            @Html.Partial("_MenuPartialPacien")
                            break;
                        case "RespClinica":
            @Html.Partial("_MenuPartialUserCli")
                            break;
                        case "Medico":
            @Html.Partial("_MenuPartialMed")
                            break;
                    }
                }
                else
                {
            <ul class="nav">
                <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Cadastro<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Registre-se", "#", new { title = "Registre e faça parte de nossa história" })</li>
                    </ul>
                </li>
                <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Parceiros<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Nossos Parceiros", "#", new { title = "Conheça nossos parceiros" })</li>
                        <li>@Html.ActionLink("Nossos Patrocinadores", "#", new { title = "Conheça nossos patrocinadores" })</li>
                    </ul>
                </li>
                <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Informações<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Suporte Convênios", "#")</li>
                        <li>@Html.ActionLink("Manual da Saúde", "#")</li>
                        <li>@Html.ActionLink("Nossas Clínicas", "#")</li>
                        <li>@Html.ActionLink("Contato ConsultaMed", "#")</li>
                        <li>@Html.ActionLink("Sugestões", "#")</li>
                    </ul>
                </li>
            </ul>
            <div class="navbar-search pull-right">
                <form class="fbuscar form-search">
                    <div class="input-append">
                        <input class="search-query span3" id="appendedInputButton" type="text" placeholder="Buscar">
                        <button class="btn btn-inverse" type="submit"><i class="icon-white icon-search"></i></button>
                    </div>
                </form>
            </div>
                }
            }
            catch (Exception ex)
            {
                throw new RequestFailedException("Erro ao renderizar os menus");
            }
        }
    </div>
</div>
