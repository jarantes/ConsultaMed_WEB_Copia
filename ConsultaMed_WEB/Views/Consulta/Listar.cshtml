@using System.Globalization
@model IEnumerable<ConsultaMed_WEB.Models.Agendamento>

@{
    ViewBag.Title = "Lista de Consultas Agendadas";
}

<hgroup class="page-header">
    <h2>@ViewBag.Title</h2>
</hgroup>

@{
    if (TempData["Erro"] != null)
    {
    <div id="mensagemErr" class="row">
        <div class="span12">
            <div class="alert alert-error">
                <a id="fecharErr" class="close">x
                </a>
                <strong>Erro</strong>
                @TempData["Erro"].ToString()
            </div>
        </div>
    </div>
    }
}
<br>
@if (Model.Any())
{
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Data da Consulta</th>
                <th>Horário</th>
                <th>Paciente</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DataConsulta.ToShortDateString()</td>
                    <td>@item.Horario</td>
                    <td>@item.PacienteUserId</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="lead"><em>Nenhuma Consulta agendada...</em></p>
}


